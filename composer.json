{
  "name": "chuyenlv/wordpress",
  "type": "project",
  "license": "proprietary",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.7.2",
    "oscarotero/env": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "extra": {
    "installer-paths": {
      "docroot/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "docroot/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "docroot/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "docroot/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
